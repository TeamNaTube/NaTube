<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".IntroActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/la_logo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="false"
        app:lottie_loop="false"
        app:lottie_rawRes="@raw/animation_intro_logo" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/la_title"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/la_logo"
        app:layout_constraintEnd_toEndOf="@+id/la_logo"
        app:layout_constraintStart_toStartOf="@+id/la_logo"
        app:layout_constraintTop_toTopOf="@+id/la_logo"
        app:lottie_autoPlay="false"
        app:lottie_loop="false"
        app:lottie_rawRes="@raw/animation_intro_title" />

</androidx.constraintlayout.widget.ConstraintLayout>